<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.billing.view.welcome.WelcomeController">
   <children>
      <BorderPane fx:id="mainPane" VBox.vgrow="ALWAYS">
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#onClose" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Manage">
                    <items>
                    	  <MenuItem mnemonicParsing="false" onAction="#billGen" text="New Bill" />
                    	  <MenuItem mnemonicParsing="false" onAction="#billManage" text="Manage Bill" />
                        <MenuItem mnemonicParsing="false" onAction="#manageCompanyOwner" text="Company Owner" />
                        <MenuItem mnemonicParsing="false" onAction="#manageCustomer" text="Customer" />
                        <MenuItem mnemonicParsing="false" onAction="#manageUserLogin" text="Login User" />
                    </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
      </BorderPane>
   </children>
</VBox>
